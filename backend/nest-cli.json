{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "admin/view", "watchAssets": true },
      { "include": "admin/public", "watchAssets": true },
      { "include": "src/**/*.hbs", "watchAssets": true }
    ],
    "watchAssets": true
  }
}
